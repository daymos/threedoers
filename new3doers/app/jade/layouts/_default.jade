doctype html
html(lang="en")
	head
		title 3doers
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		meta(content='', name='description')
		meta(content='', name='author')
		meta(content='3 days', name='revisit-after')

		// Bootstrap
		link(href='/bower_components/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
		// Font-Awesome
		link(href='/bower_components/font-awesome/css/font-awesome.min.css', rel='stylesheet')
		// Awesome Bootstrap Checkbox
		link(href='/bower_components/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css', rel='stylesheet')

		// HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
		// WARNING: Respond.js doesn't work if you view the page via file:
		<!--[if lt IE 9]>
		script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
		script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
		<![endif]-->

		// build:css /styles/main.css
		link(href='/styles/main.css', rel='stylesheet')
		// endbuild

	body
		header
			nav.navbar.navbar-default.navbar-3doers
				.container
					.navbar-header
						button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
							span.sr-only Toggle Navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href='#')
							img(src='images/logo.png', alt='3doers')
					.collapse.navbar-collapse(id='bs-example-navbar-collapse-1')
						p.navbar-text
							a.navbar-link(href='#') How it works
						p.navbar-text
							a.navbar-link(href='#') Join 3doers
						p.navbar-text
							a.navbar-link(href='#') Contact us
						ul.nav.navbar-nav.navbar-right
							li.navbar-text
								a.navbar-link.navbar-link-inverse(href='#') Log in / Sign up
							li.dropdown
								a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
									img(src='images/share_icon.png')
								ul.dropdown-menu(role='menu')
									li: span Spread the voice
									li: a(href='#')
												i.fa.fa-fw.fa-lg.fa-facebook
												| Share on facebook
									li: a(href='#')
												i.fa.fa-fw.fa-lg.fa-twitter
												| Share on twitter
									li: a(href='#')
												i.fa.fa-fw.fa-lg.fa-google-plus
												| Share on google+

		block content

		// Footer
		footer
			#footer
				.container
					.row
						.col-md-6
							nav
								ul.list-inline.nav-inline
									li: a(href='#') 3doers s.r.l. copyright 2015
									li: a(href='#') Terms and Conditions
									li: a(href='#') Privacy Policy
						.col-md-6
							nav
								ul.list-inline.nav-social
									li
										a.social-link(href='#'): i.fa.fa-fw.fa-twitter
									li
										a.social-link(href='#'): i.fa.fa-fw.fa-facebook
									li
										a.social-link(href='#'): i.fa.fa-fw.fa-pinterest-p

		script(src='/bower_components/jquery/dist/jquery.js')
		script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')

		// build:js /scripts/main.js
		script(src='/scripts/main.js')
		// endbuild
