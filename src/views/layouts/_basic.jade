  body
    header
      nav.navbar.navbar-default.navbar-3doers
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
              span.sr-only Toggle Navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/')
              img(src='/images/logo.png', alt='3doers')
          .collapse.navbar-collapse(id='bs-example-navbar-collapse-1')
            p.navbar-text
              a.navbar-link(href='/') Home
            ul.nav.navbar-nav.navbar-right
              li.navbar-text
                a.navbar-link.navbar-link-inverse(href='/accounts/login') Log in
              li.navbar-text(style="padding:0; margin-left:0; margin-right:0")
                span /
              li.navbar-text
                a.navbar-link.navbar-link-inverse(href='/accounts/signup') Sign up
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                  img(src='/images/share_icon.png')
                ul.dropdown-menu(role='menu')
                  li: span Spread the voice
                  li: a.social-popup(href='http://www.facebook.com/sharer/sharer.php?t=3Doers&u=3doers.it', data-title='Facebook')
                        i.fa.fa-fw.fa-lg.fa-facebook
                        | Share on facebook
                  li: a.social-popup(href='http://twitter.com/share?text=3Doers', data-title='Twitter')
                        i.fa.fa-fw.fa-lg.fa-twitter
                        | Share on twitter
                  li: a.social-popup(href='https://plus.google.com/share?url=3doers.it', data-title='Google +')
                        i.fa.fa-fw.fa-lg.fa-google-plus
                        | Share on google+

    .hidden-xs.hidden-sm(id='beta-label')
      img(src='/images/beta_label.png', alt='3doers beta')
    block content

