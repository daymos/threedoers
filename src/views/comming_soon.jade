    link(type='image/png', sizes='114x114', rel='apple-touch-icon-precomposed', href='/img/apple-touch-icon-144x144-precomposed.png')
    // For iPad 1
    link(type='image/png', sizes='72x72', rel='apple-touch-icon-precomposed', href='/img/apple-touch-icon-72x72-precomposed.png')
