extends base

block title
  |  Login

block body
  div
    .container
        h1.page-header Login

    br
    br
    .section.primary
      .container
        .row
          .col-md-6.col-sm-7
            form#registration(action='/accounts/login', method='POST', role='form', accept-charset='utf-8', name='signup-form')
              input(type='hidden', name='_csrf', value=csrfToken)
              .form-group
                input.form-control.input-text.resize-input-form(type='text', placeholder='username', name='username')
              .form-group
                input.form-control.input-text.resize-input-form(type='password', placeholder='password', name='password')
              br
              .form-group
                a.default-hover.forgot-password(href='/accounts/reset-password') Forgot your Password?
                br
                a.default-hover.create-account(href='/accounts/signup') Create an Account
              .form-group
                .row
                  .col-md-8.col-sm-7
                    button.btn.btn-xlg.btn-default.btn-block(type='submit')
                      span Login
    br
    br

block scripts
  script(src='/js/views/login.js')
  if locals.error
    script
      alert("#{locals.error}");

  if locals.errors
    - for (key in errors)
      script
        alert("#{key}: #{errors[key].msg}");
