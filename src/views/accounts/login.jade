extends base

block title
  |  Login

block body
  div
    .container
        h1.page-title
          span Login
        h1.page-title
          span Form
    br
    br
    .section.primary
      .container
        .row
          .col-md-6
            form#registration.form-horizontal(action='/accounts/login', method='POST', role='form', accept-charset='utf-8', name='signup-form')
              input(type='hidden', name='_csrf', value=csrfToken)
              .form-group
                input.form-control.dark.input-text.input-lg(type='text', placeholder='USERNAME', name='username')
              .form-group
                input.form-control.dark.input-text.input-lg(type='password', placeholder='PASSWORD', name='password')
              br
              .form-group
                a.default-hover.forgot-password(href='#') FORGOT YOUR PASSWORD?
                br
                a.default-hover.create-account(href='/accounts/signup') CREATE AN ACCOUNT
              br
              br
              br
              br
              .form-group
                .row
                  .col-md-8
                    button.btn.btn-xlg.btn-default.btn-block(type='submit')
                      span SIGN IN
      .right-hand.middle
        img(src='/img/hand_register.png')
    br
    br
    br
    include ../includes/publicity
    br
    br
    br

block scripts
  script(src='/js/views/login.js')
  if locals.error
    script
      alert("#{locals.error}");

  if locals.errors
    - for (key in errors)
      script
        alert("#{key}: #{errors[key].msg}");
