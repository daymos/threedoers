extends ../../layouts/_app

block title
  |  Upload Project

block extra-headers
  meta(name="csrf-token", content="#{csrfToken}")

block content
  .page
    .container
      br
      br
      .row
        include ../../includes/banner

    .bg-3doers
      .container
        div(role='tabpanel')
          ul.nav.nav-justified.nav-3doers
            li.nav-step.active
              a(href='#tab-crete-order')
                span.step-one
                | #{__("Create order")}
            li.nav-step
              a(href='#tab-place-order')
                span.step-two
                | #{__("Place order")}
            li.nav-step
              a(href='#tab-accepted')
                span.step-three
                | #{__("Accepted")}
            li.nav-step
              a(href='#tab-printing')
                span.step-four
                | #{__("Printing2")}
            li.nav-step
              a(href='#tab-shipping')
                span.step-five
                |Â #{__("Shipping")}

        .row
          .col-md-5
            h4.light #{__("Upload STL Care")}
            .upload-stl
              .preview-print#clickable-stl
                p#promptzone.upload
                 img(src="/images/icon_stlfile.png")
                 br
                 a.btn.btn-xlg.btn-green.fileinput-button #{__("Choose File")}
                #result
                .progress.hide
                  .progress-bar(aria-valuemax='100', aria-valuemin='0', aria-valuenow='0', role='progressbar')
                    span.sr-only  0% Complete

        .job-order
          h5.job-volume


        br
        br
