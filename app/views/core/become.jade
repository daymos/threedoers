
extends base

block title
  |  Become a Printer

block body
  .section.primary
    .container
      .row
        .col-md-7.col-sm-9
          h1.h1-3d.text-shadow-white
            | BECOME A PRINTER
            br
            | 3D PRINT OTHER
            br
            | PEOPLE'S DESIGN AND
            br
            | START MAKING MONEY
      br
      br
      br
      .row
        .col-md-3.col-sm-4
          br
          br
          form#printer_request_form.printer_request_form(name='printer_request_form', accept-charset='UTF-8', role='form', method='POST', action='/become')
            input(value=csrfToken, name='_csrf', type='hidden')
            button.btn.btn-default.btn-lg.btn-block(type='submit')
              span SEND REQUEST
        .col-md-7.col-md-offset-2.col-sm-offset-0.col-sm-8
          if user.printer
            h1.h1-3d.text-shadow-white
              | ALREADY REQUEST
              br
              | WAS SENT
      br
    .right-hand.middle.hidden-xs
      img(src='img/hand_register.png')
  div
    .container
      br
      br
      br
      br
      br
      br
      include ../includes/publicity
      br
      br
      br
      br
