    script(src='/vendor/bootstrap-transition.js')
    script(src='/js/views/home.js')
    script(src='/js/controllers/upload.js')
    script(src='/js/controllers/homeController.js')
    script(src='/js/form-validators/accountValidator.js')
    script(src='/js/controllers/uploadController.js')
   
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
    script(src='/javascripts/jquery.form.js')
    script(type='text/javascript')
        document.getElementById("ss").innerHTML =  #{vol};
        $("select").selectBoxIt({theme: "jqueryui"});