 
extends layout

block content
  .container
   .header
   
    ul.nav.nav-pills.pull-right
          li
            a(href='/') Home
          li.active
            a(href='upload') upload a project
          li
            a(href='become') become a printer
          li
            a(href='profile') you profile
          li
            button#btn-logout.btn
                 | Sign Out
        h3.text-muted iMake
    .jumbotron
           
           h1 Upload your design
           canvas#cv(width='600', height='300')
            | It seems you are using an outdated browser that does not support canvas :-(
           script(type='text/javascript', src='js/jsc3d.min.js')
           script(type='text/javascript')
              viewer = new JSC3D.Viewer(document.getElementById('cv'));
                viewer.setParameter('SceneUrl',         'Yoda-lite.stl');
                viewer.setParameter('ModelColor',       '#CAA618');
                viewer.setParameter('BackgroundColor1', '#E5D7BA');
                viewer.setParameter('BackgroundColor2', '#383840');
                viewer.setParameter('RenderMode',       'smooth');
                viewer.init();
                viewer.update();

          p
          | file must be in stl format
          form(method='post', enctype='multipart/form-data', action='/file-upload')
             input(type='file', name='thumbnail')
             input(type='submit', name='upload')
      .footer
        p © Company 2013
