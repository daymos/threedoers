extend ../comming_soon

block scripts
  script(src='/vendor/jquery.bxslider.js')
  script(src='/js/views/home.js')

block body
  .title_block
    section.homepage.container2
      h1.title
        p
          | WELCOME TO 3DOERS
          br
        p
          | FIND A 3D PRINTER FOR
          br
        p
          | YOUR PROJECT OR START
          br
        p
          | PRINTING OTHERS
          br
    .title_background
      .title_bar1
      .title_bar2
      .title_bar3
      .title_bar4
  section.homepage.container3
    h3.subtitle
      | 3DOERS IS A FAST COLLECTIVE 3D PRINTING SERVICE
      br
      | YOU CAN UPLOAD, PRINT OR WORK ON THE FILES
      br
      | LEARN HOW TO DO IT HERE

  .gallery
    ul#bxslider
      li: img(src="/img/yoda_gallery_img.png", alt='3d printer')
      li: img(src="/img/user_gallery_img.png", alt='3d printer')
      li: img(src="/img/printer_gallery_img.png", alt='3d printer')
      li: img(src="/img/filemanager_gallery_img.png", alt='3d printer')
    .container-gallery_homepage
      .gallery_image: img(src="/img/gallery_image.png", alt='3d printer')
    .square

  .beta_email_block
    section.homepage.container4
      .container-left
        h3.title
          | JOIN US IN OUR BETA
          br
          | WE'RE LAUNCHING SOON!
      .container-right
        form#registration(action='/', method='POST', role='form', accept-charset='utf-8')
          input(name='authenticity_token', type='hidden')
          fieldset
            input(value=csrfToken, name='_csrf', type='hidden')
            p.form-group
              input#email.form(value='', placeholder='Your Email Address', name='email')
            p
              input#submit.form(type='submit', value='SEND', name='submit')
        if message
          .status_messages(class=error?"error":"ok")
            p #{message}

  include ../includes/publicity
