-if (user.id == project.order.printer)
  div(role='tabpanel')
    ul.nav.nav-justified.nav-3doers
      li.nav-step.active
        a(href='#tab-review')
          span.step-one
          | Review
      li.nav-step
        a(href='#tab-accepted')
          span.step-two
          | Accepted
      li.nav-step
        a(href='#tab-printing')
          span.step-three
          | Printing
      li.nav-step
        a(href='#tab-shipping')
          span.step-four
          | Shipping
    .tab-content
      .tab-pane.fade.in.active(id='tab-review')
        h4.light You have 24 hours to review and accept this order before it goes automatically back to the Workplace.
      .tab-pane.fade(id='tab-accepted')
        h4.light
      .tab-pane.fade(id='tab-printing')
        h4.light
          | You can now proceed with the printing, remember that a faster service will result in a higher rating for you.
          br
          | Once you've completed the order, please click on "ORDER PRINTED" to generate a shipping label.
      .tab-pane.fade(id='tab-shipping')
        h4.light Print the shipping label, pack the item and attach the label on it.

  .job-review
    h4.job-name Small_frog.stl
    .row
      .col-md-8
        .job-details
          .row
            .col-md-7
              figure
                #wrapper-canvas
                  canvas#cv
            .col-md-5
              .info
                p
                  strong COLOR:
                  |  #{project.color}
                p
                  strong MATERIAL:
                  |  #{project.material}
                p
                  strong AMOUNT:
                  |  #{project.order.ammount} pieces
                p
                  strong VOLUME:
                  |  #{project.volume} cm3
                p
                  strong WEIGHT:
                  |  #{project.weight} g
                if project.dimension
                  p
                    strong DIMENSIONS:
                    |  #{project.dimension.width} cm (W) #{project.dimension.height} cm (H) #{project.dimension.length}(L)
                br
                h4: a(href='/#{project.file}') Download STL file
      .col-md-4
        table.job-payment
          tbody
            tr
              td.desc Taxes:
              td.value #{project.order.taxes} €
            tr
              td.desc 3Doers:
              td.value #{project.order.businessPayment} €
            tr
              td.desc Shipping:
              td.value -
            tr.separator
              td(col-span='2')
            tr
              td.desc.text-shadow-3doers Printer:
              td.value
                h3.normal #{project.order.printerPayment} €
  .row
    .col-md-3
      .form-group
        a#deny.btn.btn-xlg.btn-block.btn-green-inverse(href='/printing/deny/#{project.id}') Not for me
    .col-md-4.col-md-offset-5
      .form-group
        a#accept.btn.btn-xlg.btn-block.btn-green(href='/printing/accept/#{project.id}') ACCEPT ORDER

  .page-subheader
    h3 Conversation with project owner:

