extends ../../layouts/_app

block title
  |  Upload Project

block extra-headers
  meta(name="csrf-token", content="#{csrfToken}")

block content
  .page
    .container
      br
      br
      .row
        include ../../includes/banner

    .bg-3doers
      .container
        div(role='tabpanel')
          ul.nav.nav-justified.nav-3doers
            li.nav-step.active
              a(href='#tab-crete-order')
                span.step-one
                | Create order
            li.nav-step
              a(href='#tab-place-order')
                span.step-two
                | Place order
            li.nav-step
              a(href='#tab-accepted')
                span.step-three
                | Accepted
            li.nav-step
              a(href='#tab-printing')
                span.step-four
                | Printing
            li.nav-step
              a(href='#tab-shipping')
                span.step-five
                |Â Shipping


        .job-order
          h4 Upload your STL file and let us take care of the rest
          h5.job-volume
            .preview-print#clickable-stl.col-md-6
              p#promptzone.upload
               img(src="/img/stl_icon.png")
               br
               a.btn-default.btn-lg Choose File
              #result
              .progress.hide
                .progress-bar(aria-valuemax='100', aria-valuemin='0', aria-valuenow='0', role='progressbar')
                  span.sr-only  0% Complete

        br
        br
