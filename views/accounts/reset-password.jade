extends base

block title
  |  Reset Password

block body
  div
    .container
        h1.page-title
          span Reset
        h1.page-title
          span Password
    br
    br
    .section.primary
      .container
        .row
          .col-md-6.col-sm-7
            form#registration(action='/accounts/reset-password', method='POST', role='form', accept-charset='utf-8', name='reset-form')
              input(type='hidden', name='_csrf', value=csrfToken)
              .form-group
                input.form-control.dark.input-text.input-lg(type='text', placeholder='EMAIL', name='email')
              br
              br
              br
              br
              .form-group
                .row
                  .col-md-8.col-sm-7
                    button.btn.btn-xlg.btn-default.btn-block(type='submit')
                      span RESET PASSWORD
      .right-hand.middle.hidden-xs
        img(src='/img/hand_register.png')
    br
    br
    br
    include ../includes/publicity
    br
    br
    br

block scripts
  if locals.error
    script
      alert("#{locals.error}");

  if locals.errors
    - for (key in errors)
      script
        alert("#{key}: #{errors[key].msg}");
